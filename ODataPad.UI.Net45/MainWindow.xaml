<Window x:Class="ODataPad.UI.Net40.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModels="clr-namespace:ODataPad.Core.ViewModels;assembly=ODataPad.Core"
        DataContext="{Binding viewModels:HomeViewModel.Self, RelativeSource={RelativeSource Self}}"
        Title="ODataPad" Height="600" Width="900">
    <Grid>
        <ListView 
            HorizontalAlignment="Left" Height="413" Margin="31,27,0,0" VerticalAlignment="Top" Width="248"
            ItemsSource="{Binding Services}"
            SelectedItem="{Binding SelectedService, Mode=TwoWay}"
            SelectionMode="Single" >
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
